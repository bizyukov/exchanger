<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_size"
            android:layout_marginTop="@dimen/medium_size"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/medium_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/medium_size"
            android:layout_marginStart="@dimen/medium_size"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/medium_size"
            android:layout_marginRight="@dimen/medium_size"
            android:id="@+id/linearLayout">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_size"
                android:height="@dimen/big_size"
                android:hint="@string/pln"
                android:ems="10"
                android:id="@+id/plnRate"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_poland"
                android:background="@color/cardview_light_background"
                android:padding="@dimen/small_size"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="none"
                android:focusable="false"
        />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/big_size"
                android:hint="@string/usd"
                android:ems="10"
                android:id="@+id/usdRate"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_united_states"
                android:background="@color/cardview_light_background"
                android:padding="@dimen/small_size"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="none"
                android:focusable="false" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>